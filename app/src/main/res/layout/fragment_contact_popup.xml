<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adastudio.idareyou.Fragments.Contact_PopUp_Dialog_Fragment"
    >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="@drawable/contact_picture_shape">



        <TextView
            android:id="@+id/contact_popup_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            />
        <ImageView
            android:id="@+id/contact_popup_image_imageview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            />
        <TextView
            android:id="@+id/contact_popup_rank_f_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            />
        <TextView
            android:id="@+id/contact_popup_rank_w_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"

            />
    </LinearLayout>

</FrameLayout>
